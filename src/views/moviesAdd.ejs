<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head', {title: 'Agregar Pélicula'}) %> 

<body>
    <%- include('partials/header') %> 
<main class="add_main">
    <h1 class="titulo_general">Agregar Película</h1>
    <section class="formulario_general">
        <form action="/movies/create" method="POST">
            <div>
                
                <input type="text" name="title" id="title"  placeholder="TITULO:"   value="<%= locals.old && old.title ? old.title : null %>">
                <small style="color: red"><%= locals.errors && errors.title ? errors.title.msg : null %></small>
            </div>
            <div>
                
                <input type="number" name="rating" id="rating" placeholder="RATING:"  value="<%= locals.old && old.rating ? old.rating : null %>">
                <small style="color: red"><%= locals.errors && errors.rating ? errors.rating.msg : null %></small>
            </div>
            <div>
                
                <input type="number" name="awards" id="awards" placeholder="PREMIOS:" value="<%= locals.old && old.awards ? old.awards : null %>">
                <small style="color: red"><%= locals.errors && errors.awards ? errors.awards.msg : null %></small>
            </div>
            <div>
                
                <input type="date" name="release_date" id="release_date"  placeholder="fECHA DE REALIZACIÓN:" value="<%= locals.old && old.release_date? old.release_date: null %>">
                <small style="color: red"><%= locals.errors && errors.release_date ? errors.release_date.msg : null %></small>
            </div>
            <div>
                
                <input type="number" name="length" id="length" placeholder="DURACIÓN:" value="<%= locals.old && old.length ? old.length : null %>">
                <small style="color: red"><%= locals.errors && errors.length ? errors.length.msg : null %></small>
            </div>
            <div>
            
            <select name="genre_id" id="genre_id" placeholder="GÉNERO:">
                <option value="" hidden selected>Seleccione un género</option>
                <% genres.forEach(genre => { %> 
                    <option value="<%= genre.id %> "><%= genre.name %> </option>
                    
                <% }) %>
                 
            </select>
            <small style="color: red"><%= locals.errors && errors.genre_id ? errors.genre_id.msg : null %></small>
            </div>
           
        <button class="button_general" type="submit">Agregar</button>
        </form>
       
    </section>
    
</main>
    
</body>

</html>